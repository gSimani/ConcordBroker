{
  "version": 2,
  "name": "concord-broker",
  "buildCommand": "cd apps/web && npm install && npm run build",
  "outputDirectory": "apps/web/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "devCommand": "cd apps/web && npm run dev",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://concordbroker.up.railway.app/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/cron/sunbiz-daily-update.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/sunbiz-daily-update",
      "schedule": "0 7 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}