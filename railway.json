{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && cd apps/web && npm install && npm run build && cd ../api && pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd apps/api && python -m uvicorn main_simple:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  },
  "environments": {
    "production": {
      "deploy": {
        "numReplicas": 2,
        "startCommand": "cd apps/api && python -m uvicorn main_simple:app --host 0.0.0.0 --port $PORT --workers 4"
      }
    }
  }
}