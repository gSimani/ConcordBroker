# ConcordBroker Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Supabase Database URLs
DATABASE_URL=your_database_url_here
POSTGRES_URL=your_postgres_url_here
POSTGRES_URL_NON_POOLING=your_postgres_non_pooling_url_here
POSTGRES_PRISMA_URL=your_postgres_prisma_url_here
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=your_postgres_host_here
POSTGRES_DATABASE=postgres

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Supabase API Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Next.js Public Variables
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Vite Variables (for React app)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_API_URL=http://localhost:8000
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Publish Keys
SUPABASE_PUBLISH_KEY=your_publish_key_here
SUPABASE_PUBLISH_SECRET_KEY=your_publish_secret_key_here

# ============================================
# AI & LLM CONFIGURATION
# ============================================

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LangSmith Configuration (Required for LangGraph workflows)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=concordbroker

# ============================================
# LANGGRAPH WORKFLOW CONFIGURATION
# ============================================

# Workflow Settings
WORKFLOW_MAX_RETRIES=3
WORKFLOW_TIMEOUT=300
ENABLE_STREAMING=true
ENABLE_HUMAN_IN_LOOP=false
DEFAULT_LLM_MODEL=gpt-4o-mini

# ============================================
# EXTERNAL SERVICES
# ============================================

# Google Maps API (for property map views)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
VITE_GOOGLE_MAPS_KEY=your-google-maps-api-key-here

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ============================================
# APPLICATION SETTINGS
# ============================================

# Production Website
WEBSITE_URL=https://www.concordbroker.com

# Access Token Settings
ACCESS_TOKEN_EXPIRY=3600

# Max Rows Settings
MAX_ROWS=1000

# Environment
NODE_ENV=development
ENVIRONMENT=development

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit this file with real credentials to version control
# 2. Use different API keys for development and production
# 3. Rotate keys regularly
# 4. Store production keys in secure key management systems
# 5. Use environment-specific .env files (.env.local, .env.production)

# ============================================
# GETTING STARTED
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys and credentials
# 3. Ensure .env is in your .gitignore file
# 4. Run: npm install (in both /apps/web and /apps/api)
# 5. Start the servers:
#    - API: cd apps/api && python main_simple.py
#    - Web: cd apps/web && npm run dev

# ============================================
# API KEY SOURCES
# ============================================
# Supabase: https://app.supabase.com/project/[project-id]/settings/api
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/settings/keys
# LangSmith: https://smith.langchain.com/settings
# Google Maps: https://console.cloud.google.com/apis/credentials