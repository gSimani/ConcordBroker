# Environment Variables for Optimized Agent System
# Copy this to .env.orchestrator and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/concordbroker
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379
# For Railway/production, use the provided Redis URL
# REDIS_URL=redis://default:password@redis.railway.internal:6379

# ============================================================================
# AI/LLM
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
LANGCHAIN_API_KEY=your-langchain-api-key
LANGSMITH_API_KEY=your-langsmith-api-key

# ============================================================================
# ORCHESTRATOR CONFIGURATION
# ============================================================================
CONFIDENCE_THRESHOLD=0.7
ENABLE_CONTEXT_COMPRESSION=true
ENABLE_REWOO_PLANNING=true
MAX_RETRIES=3
OPERATION_TIMEOUT=300

# ============================================================================
# MONITORING (Optional)
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ============================================================================
# DEPLOYMENT (Railway/Production)
# ============================================================================
PORT=8000
RAILWAY_ENVIRONMENT=production
# Railway will automatically set PORT - don't override in production

# ============================================================================
# SECURITY
# ============================================================================
API_KEY=your-secure-api-key-here
CORS_ORIGINS=https://www.concordbroker.com,https://concordbroker.vercel.app

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ESCALATION_ENABLED=true
ENABLE_WEBSOCKET=true
ENABLE_DETAILED_LOGGING=false
