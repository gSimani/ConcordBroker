# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI Configuration (for RAG/embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# HuggingFace Configuration (alternative to OpenAI)
HF_TOKEN=hf_your-huggingface-token-here

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=your-verify-service-sid

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com
SENDGRID_FROM_NAME=ConcordBroker

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Database Configuration (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/concordbroker

# Redis Configuration (for caching/queues)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-for-signing
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin Configuration
ADMIN_TOKEN=your-admin-token-for-debug-endpoints

# Data Source Credentials
FTP_BROWARD_USER=crpublic
FTP_BROWARD_PASSWORD=password-if-needed
SFTP_SUNBIZ_USER=Public
SFTP_SUNBIZ_PASSWORD=PubAccess1845!

# Railway/Deployment Configuration
RAILWAY_ENVIRONMENT=production
PORT=8000
NODE_ENV=production
PYTHON_ENV=production

# Cloudflare Configuration
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_PLAYWRIGHT_SCRAPER=false
ENABLE_RAG_SYSTEM=false
ENABLE_AI_AGENTS=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "https://your-domain.com"]
CORS_CREDENTIALS=true

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_BATCH_SIZE=1000
WORKER_RETRY_ATTEMPTS=3

# Data Paths
DATA_RAW_PATH=/data/raw
DATA_PROCESSED_PATH=/data/processed
DATA_CACHE_PATH=/data/cache

# Scheduler Configuration (cron expressions)
SCHEDULE_OR_LOADER=0 15 7 * * *
SCHEDULE_SUNBIZ_LOADER=0 0 8 * * *
SCHEDULE_SCORING_UPDATE=0 0 */6 * * *